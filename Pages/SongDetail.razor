@using TuneMergR.Data
<h3>SongDetail</h3>


<MatCard>
    <MatCardContent>
        <MatCardMedia ImageUrl="@_songModel.PosterPath" />
        <div class="demo-mat-card-content">
            <MatHeadline6 class="demo-mat-card-clean-margin">
                @_songModel.Name
            </MatHeadline6>
